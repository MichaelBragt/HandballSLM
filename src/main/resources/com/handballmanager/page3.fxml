<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>

<!--League table-->
<VBox alignment="TOP_CENTER" maxHeight="Infinity" maxWidth="Infinity" spacing="20.0" BorderPane.alignment="CENTER" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.handballmanager.controllers.Page3Controller">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <TableView fx:id="leagueTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="rankingCol" text="Placering" />
            <TableColumn fx:id="pointsCol" text="Point" />
            <TableColumn fx:id="teamNameCol" text="Hold Navn" />
            <TableColumn fx:id="scoredGoalsCol" text="Mål Scoret" />
            <TableColumn fx:id="goalsTakenCol" text="Mål Taget" />
            <TableColumn fx:id="matchStatsCol" text="Vundet/Tabt/Ulige" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>
</VBox>